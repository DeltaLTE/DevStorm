import {
    MagnifyingGlassIcon,
    UserCircleIcon,
    ShoppingCartIcon,
} from '@heroicons/react/24/outline';

// Map of links to display in the side navigation.
// Depending on the size of the application, this would be stored in a database.
const links = [
  { href: '/home', icon: MagnifyingGlassIcon },
  { href: '/home/about', icon: ShoppingCartIcon,},
  { name: 'Produk', href: '/home/produk', icon: UserCircleIcon },
];

export default function TopLinks() {
  return (
    <>
      {links.map((link) => {
        const LinkIcon = link.icon;
        return (
          <a
            key={link.name}
            href={link.href}
            className="flex h-[48px] grow items-center justify-center gap-2 rounded-md p-3 text-sm font-medium text-white hover:text-black md:flex-none md:justify-start md:p-2 md:px-3"
          >
            <LinkIcon className="w-6" />
            <p className="hidden md:block">{link.name}</p>
          </a>
        );
      })}
    </>
  );
}
